html
head
    title= 'Horizon Ticket Machine'
    link(rel='stylesheet', href='/bootstrap/bootstrap.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')

body(style='background-color: rgba(255,255,255,0);')

    div
        nav.navbar.navbar-light.navbar-expand-md.navigation-clean(style='background-color: #00bce2;color: rgb(255,255,255);')
            .container
                a.navbar-brand(href='/', style='color: #eeeeee;') Horizon Ticket Machine
                button.navbar-toggler(data-toggle='collapse', data-target='#navcol-1')
                    span.sr-only Toggle navigation
                    span.navbar-toggler-icon
                |
                #navcol-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.ml-auto
                        li.nav-item(role='presentation')
                            a.nav-link.active(href='/', style='color: #eeeeee;') Home
                        |
                        li.dropdown
                            a.dropdown-toggle.nav-link.dropdown-toggle(data-toggle='dropdown', aria-expanded='false', href='#', style='color: #eeeeee;') Users
                            |
                            .dropdown-menu(role='menu')
                                a.dropdown-item(role='presentation', href='/users') View All Users
                                a.dropdown-item(role='presentation', href='/users/adduser') Add New User
                        |
                        li.dropdown
                            a.dropdown-toggle.nav-link.dropdown-toggle(data-toggle='dropdown', aria-expanded='false', href='#', style='color: #eeeeee;') Tickets
                            |
                            .dropdown-menu(role='menu')
                                a.dropdown-item(role='presentation', href='/tickets') View All Tickets
                                a.dropdown-item(role='presentation', href='/openticket') Open Tickets
                                a.dropdown-item(role='presentation', href='/closedticket') Closed Ticket
                                a.dropdown-item(role='presentation', href='/newticket') New Ticket
    |