include header

block content
    .dataTable_wrapper
        .row
            .col-sm-12.col-md-6
            .col-sm-12.col-md-6
        .row
            .col-sm-12
                .card.mb3
                    .card-header USERS
                    .card-body
                        table.table.table-hover.table-responsive-sm.table-bordered
                            thead
                                tr
                                    th Username
                                    th Role
                                    th(colspan='2') Actions
                            tbody
                                each item in userlist
                                    tr
                                        td= item.username
                                        td= item.role
                                        td
                                            a.btn.btn-outline-primary.btn-sm(style='margin: 5px', href='/#') Edit
                                            a.btn.btn-outline-primary.btn-sm(style='margin: 5px', href='/#') Details
        .row
            .col-sm-12.col-md-6